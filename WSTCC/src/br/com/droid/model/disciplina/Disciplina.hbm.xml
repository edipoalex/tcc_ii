<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

	<class name="br.com.droid.model.disciplina.Disciplina" table="disciplinas">

		<id name="codigo" column="cod_disc" type="java.lang.Integer">
			<generator class="increment"></generator>
		</id>
		
		<property name="nome" column="nom_disc" type="java.lang.String"></property>
		
	
		
	</class>

</hibernate-mapping>