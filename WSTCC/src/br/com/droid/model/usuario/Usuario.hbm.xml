<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

	<class name="br.com.droid.model.usuario.Usuario" table="alunos">

		<id name="login" column="mat_alu" type="java.lang.Integer">
			<generator class="increment"></generator>
		</id>
		
		<property name="senha" column="nr_cpf" type="java.lang.Long"></property>
		<property name="nome" column="nom_alu" type="java.lang.String"></property>
		
	</class>

</hibernate-mapping>